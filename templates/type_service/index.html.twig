{% extends 'base.html.twig' %}
{% block body %}

 <div id="right-panel" class="right-panel">
    <div class="content">
        <div class="animated fadeIn">
            <!-- Widgets  -->
            <div class="row">
                <div class="col-md-7">
                    <div class="card">
                        <div class="card-header bg-primary mb-3">
                            <strong class="card-title color-white">GESTION TYPE DE SERVICES  </strong>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                               <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Libelle</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for type_service in type_services %}
                                        <tr>
                                            <td>{{ type_service.id }}</td>
                                            <td>{{ type_service.libelle }}</td>
                                            <td>
                                                <div style="display: inline-block;padding-left:2%">{{ include('type_service/_delete_form.html.twig') }}</div>
                                                <a href="{{ path('type_service_edit', {'id': type_service.id}) }}"> <i style="font-size:22px ; color:green" class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                            </table>
                            <a class="btn btn-success btn-sm" href="{{ path('type_service_new') }}">Creer un nouveau type de services  </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>
</div>  
{% endblock %}
