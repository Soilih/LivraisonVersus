{% extends 'base.html.twig' %}

{% block body %}
<div id="right-panel" class="right-panel">
    <div class="content">
        <div class="animated fadeIn">
            <!-- Widgets  -->
            <div class="row">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header bg-danger mb-3 text-white">
                            <strong class="card-title">GESTION UTILISATEURS </strong>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered " id="bootstrap-data-table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Email</th>
                                        <th>Telephone</th>
                                        <th>Status</th>
                                        <th>Numero_siret</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.email }}</td>
                                        
                                      
                                        <td>{{ user.telephone }}</td>
                                        <td>{{ user.status }}</td>
                                        <td>{{ user.numeroSiret }}</td>
                                        <td>
                                         <div style="display: inline-block;padding-left:2%"> {{ include('users/_delete_form.html.twig') }} </div> 
                                          
                                            <a href="{{ path('users_show', {'id': user.id}) }}"><i style="font-size:22px ; color:green" class="fa fa-info-circle"> </i></a>
                                        </td>
                                       
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>
</div>
{% endblock %}
